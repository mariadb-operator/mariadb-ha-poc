[Write-Service]
type=service
router=readconnroute
router_options=master
servers=mariadb-repl-0,mariadb-repl-1,mariadb-repl-2
user=maxscale
password=MariaDB11!

[Read-Service]
type=service
router=readconnroute
router_options=slave
servers=mariadb-repl-0,mariadb-repl-1,mariadb-repl-2
user=maxscale
password=MariaDB11!

[Write-Listener]
type=listener
service=Write-Service
protocol=MariaDBClient
port=3306

[Read-Listener]
type=listener
service=Read-Service
protocol=MariaDBClient
port=3307